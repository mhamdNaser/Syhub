<div class="header__icons" {{ block.shopify_attributes }}>
  {% if shop.customer_accounts_enabled %}
    <a href="{{ routes.account_url }}" aria-label="user">
      {%- render 'icons', icon: 'icon-user', icon_size: '24' -%}
    </a>
  {% endif %}

  <a href="{{ routes.cart_url }}" aria-label="cart" class="relative">
    <span class="absolute -top-2 -left-3 flex items-center justify-center w-4 h-4 rounded-full border border-red-600 text-red-600 text-xs bg-white">
      {{ cart.item_count }}
    </span>
    {%- render 'icons', icon: 'icon-cart', icon_size: '24' -%}
  </a>
</div>

{% schema %}
{
  "name": "User Icon Block",
  "settings": [],
  "presets": [
    {
      "name": "User Icon Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
