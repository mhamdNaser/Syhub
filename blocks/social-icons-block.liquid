{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}

{% liquid
  if settings.facebook_url != blank
    assign facebook_url = settings.social_facebook
  else
    assign facebook_url = routes.root_url
  endif
  if settings.instagram_url != blank
    assign instagram_url = settings.social_instagram
  else
    assign instagram_url = routes.root_url
  endif
%}

<div class="flex items-center gap-4" {{ block.shopify_attributes }}>
  {% render 'button',
    type: 'link',
    url: facebook_url,
    aria_label: 'icon-facebook',
    target: '_blank',
    class: 'hover:text-blue-600 transition inline-block',
    icon: 'icon-facebook'
    icon_size: '20'
    icon_color: 'black'
  %}
  {% render 'button',
    type: 'link',
    url: instagram_url,
    aria_label: 'icon-instagram',
    target: '_blank',
    class: 'hover:text-blue-600 transition inline-block',
    icon: 'icon-instagram'
    icon_size: '20'
    icon_color: 'black'
  %}
</div>

{% schema %}
{
  "name": "Social Icons Bar",
  "settings": [],
  "presets": [{ "name": "Social Icons Bar", "category": "Header" }]
}
{% endschema %}
