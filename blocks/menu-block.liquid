{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'tools', id: 'tools' %}
{% enddoc %}

{% assign button_class = 'flex items-center gap-x-1 js-toggle-header-menu '
  | append: block.settings.item_hover_effect
%}

<style>
  #header-menu-semore li {
    margin-block: 5px !important;
    padding-block: 5px !important;
  }
</style>

<div class="header__menu w-full" {{ block.shopify_attributes }}>
  <ul class="flex justify-between items-center w-full space-x-6 text-gray-600 hover:text-black">
    {% for link in block.settings.menu.links %}
      {% if link.links != blank %}
        <li class="relative whitespace-nowrap flex-shrink-0">
          {% assign btn_id = 'list-toggle-' | append: link.title | handleize %}
          {% assign btn_target = 'header-menu-' | append: link.title | handleize %}
          {% render 'button',
            type: 'button',
            id: btn_id,
            class: button_class,
            data_target: btn_target,
            data_label: link.title,
            text: link.title,
            bg_color: block.settings.link_bg_color,
            text_color: block.settings.link_text_color
          %}
          {%- render 'classic-menu', link: link -%}
        </li>
      {% else %}
        <li class="flex-shrink-0">
          {% render 'button',
            type: 'link',
            url: link.url,
            class: block.settings.item_hover_effect,
            data_label: link.title,
            text: link.title,
            bg_color: block.settings.link_bg_color,
            text_color: block.settings.link_text_color
          %}
        </li>
      {% endif %}
    {% endfor %}

    <!-- زر See More -->
    <li class="relative group flex-shrink-0 see-more">
      <button
        id="list-toggle-seemore"
        data-target="header-menu-semore"
        class="flex items-center gap-x-1 js-toggle-header-menu"
      >
        See more
      </button>
      <ul
        id="header-menu-semore"
        class="absolute top-full left-0 mt-3 min-w-[220px] transition-menu bg-white border border-gray-200 shadow-lg z-20 py-2"
      ></ul>
    </li>
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuContainer = document.querySelector('.header__menu ul');
    if (!menuContainer) return;

    const seeMoreLi = menuContainer.querySelector('.see-more');
    const seeMoreMenu = seeMoreLi.querySelector('ul');

    // ✅ تعديل جميع ul li ul داخل see more
    function fixNestedDropdowns() {
      const nestedULs = seeMoreMenu.querySelectorAll('li > ul ');
      nestedULs.forEach((ul) => {
        ul.classList.remove('left-0', 'top-full', 'mt-3');
        ul.classList.add('-left-full', 'top-0');
      });
    }

    function organizeMenu() {
      // رجع كل العناصر من see more للقائمة الرئيسية
      Array.from(seeMoreMenu.children).forEach((li) => menuContainer.insertBefore(li, seeMoreLi));

      const containerWidth = menuContainer.offsetWidth;
      let totalWidth = seeMoreLi.offsetWidth; // عرض زر See More

      // جلب العناصر باستثناء زر see more
      let items = Array.from(menuContainer.children).filter((li) => li !== seeMoreLi);

      // ترتيب: اللي إلها تشايلد تبقى أول
      items.sort((a, b) => {
        const aHasChild = a.querySelector('ul') ? 0 : 1;
        const bHasChild = b.querySelector('ul') ? 0 : 1;
        return aHasChild - bHasChild;
      });

      // إعادة ترتيب العناصر داخل القائمة الرئيسية
      items.forEach((li) => menuContainer.insertBefore(li, seeMoreLi));

      // توزيع العناصر مع مراعاة العرض
      items.forEach((li) => {
        totalWidth += li.offsetWidth;
        if (totalWidth > containerWidth) {
          seeMoreMenu.appendChild(li);
        }
      });

      // إظهار أو إخفاء زر see more
      seeMoreLi.style.display = seeMoreMenu.children.length ? 'flex' : 'none';

      // ✅ بعد التوزيع: صحّح اتجاه الـ nested dropdowns
      fixNestedDropdowns();
    }

    organizeMenu();
    window.addEventListener('resize', organizeMenu);
  });
</script>

{% schema %}
{
  "name": "Menu Block",
  "class": "w-full",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "menu"
    },
    {
      "type": "color",
      "id": "link_bg_color",
      "label": "link background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "link_text_color",
      "label": "link text color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "item_hover_effect",
      "label": "item_hover_effect",
      "options": [
        {
          "value": "lightline",
          "label": "light underline"
        },
        {
          "value": "hover-underline",
          "label": "underline"
        },
        {
          "value": "hover-doubleline",
          "label": "doubleline"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Menu Block",
      "category": "Header"
    }
  ]
}
{% endschema %}
