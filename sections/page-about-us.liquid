<section class="max-w-6xl mx-auto px-4 py-12">
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-gray-600 max-w-2xl mx-auto">{{ section.settings.intro_text }}</p>
    {% if section.settings.main_image != blank %}
      <img
        src="{{ section.settings.main_image | image_url: width: 1000 }}"
        alt="About us"
        class="mx-auto mt-6 rounded-2xl shadow-lg"
        loading="lazy"
        width=""
        height=""
      >
    {% endif %}
  </div>

  <div class="grid gap-8 md:grid-cols-2">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text_block' %}
          <div class="bg-white rounded-2xl shadow p-6">
            {% if block.settings.title != blank %}
              <h2 class="text-xl font-semibold mb-3">{{ block.settings.title }}</h2>
            {% endif %}
            <p class="text-gray-700">{{ block.settings.content }}</p>
          </div>

        {% when 'image_block' %}
          {% if block.settings.image != blank %}
            <div>
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="About image"
                class="rounded-2xl shadow-lg"
                loading="lazy"
                width=""
                height=""
              >
            </div>
          {% endif %}

        {% when 'team_block' %}
          <div class="bg-gray-50 rounded-2xl shadow p-6 text-center">
            {% if block.settings.photo != blank %}
              <img
                src="{{ block.settings.photo | image_url: width: 300 }}"
                alt="{{ block.settings.name }}"
                class="w-32 h-32 mx-auto rounded-full object-cover mb-4"
                loading="lazy"
                width=""
                height=""
              >
            {% endif %}
            <h3 class="text-lg font-semibold">{{ block.settings.name }}</h3>
            <p class="text-sm text-gray-600">{{ block.settings.role }}</p>
            <p class="mt-2 text-gray-700">{{ block.settings.bio }}</p>
          </div>

        {% when 'cta_block' %}
          <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow p-8 text-center text-white">
            <h2 class="text-2xl font-bold mb-4">{{ block.settings.cta_title }}</h2>
            <p class="mb-6">{{ block.settings.cta_text }}</p>
            <a
              href="{{ block.settings.cta_link }}"
              class="inline-block px-6 py-3 bg-white text-indigo-600 font-semibold rounded-xl shadow hover:bg-gray-100 transition"
            >
              {{ block.settings.cta_button }}
            </a>
          </div>

        {% when '@app' %}
          <div class="w-full" {{ block.shopify_attributes }}>
            {% render block %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "About Us Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Intro Text",
      "default": "Welcome to our store! We believe in quality and innovation."
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        { "type": "text", "id": "title", "label": "Block Title" },
        { "type": "textarea", "id": "content", "label": "Content" }
      ]
    },
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [{ "type": "image_picker", "id": "image", "label": "Image" }]
    },
    {
      "type": "team_block",
      "name": "Team Member",
      "settings": [
        { "type": "image_picker", "id": "photo", "label": "Photo" },
        { "type": "text", "id": "name", "label": "Name", "default": "John Doe" },
        { "type": "text", "id": "role", "label": "Role", "default": "Founder & CEO" },
        {
          "type": "textarea",
          "id": "bio",
          "label": "Short Bio",
          "default": "Passionate about building great experiences for our customers."
        }
      ]
    },
    {
      "type": "cta_block",
      "name": "Call to Action",
      "settings": [
        { "type": "text", "id": "cta_title", "label": "Title", "default": "Join Our Journey" },
        {
          "type": "textarea",
          "id": "cta_text",
          "label": "Text",
          "default": "Be part of our story by joining our newsletter or exploring our products."
        },
        { "type": "text", "id": "cta_button", "label": "Button Text", "default": "Get Started" },
        { "type": "url", "id": "cta_link", "label": "Button Link", "default": "/" }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "About Us Page",
      "category": "Pages",
      "blocks": [
        { "type": "text_block" },
        { "type": "image_block" },
        { "type": "team_block" },
        { "type": "cta_block" },
        { "type": "faq_block" },
        { "type": "@app" }
      ]
    }
  ]
}
{% endschema %}
