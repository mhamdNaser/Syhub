<section class="max-w-6xl mx-auto px-4 py-12">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-gray-600 max-w-2xl mx-auto">{{ section.settings.intro_text }}</p>
    {% if section.settings.main_image != blank %}
      <img
        src="{{ section.settings.main_image | image_url: width: 800 }}"
        alt="about"
        class="mx-auto mt-6 rounded-2xl shadow-lg"
        width=""
        height=""
      >
    {% endif %}
  </div>

  <div class="grid gap-8 md:grid-cols-2">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text_block' %}
          <div class="bg-white rounded-2xl shadow p-6">
            <h2 class="text-xl font-semibold mb-2">{{ block.settings.title }}</h2>
            <p class="text-gray-700">{{ block.settings.content }}</p>
          </div>

        {% when 'image_block' %}
          {% if block.settings.image != blank %}
            <div>
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="about image"
                class="rounded-2xl shadow-lg"
                width=""
                height=""
              >
            </div>
          {% endif %}

        {% when 'contact_block' %}
          <div class="bg-gray-50 rounded-2xl shadow p-6">
            {% render 'contact-form' %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Contact Us Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Intro Text",
      "default": "Welcome to our store! We believe in quality and innovation."
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Block Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        }
      ]
    },
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "contact_block",
      "name": "Contact Form Block",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Contact Us Page",
      "category": "Pages"
    }
  ]
}
{% endschema %}
