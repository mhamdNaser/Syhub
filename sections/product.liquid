{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  //quickstart-a2f667fa.myshopify.com/cdn/shop/files/all_medium.webp?v=1746350113
  files/all.webp

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}
{% liquid
  assign section_id = section.id
  assign default_variant = product.selected_or_first_available_variant
  assign selected_variant = blank

  assign product_title = product.title
  assign product_vendor = product.vendor
  assign product_handle = product.handle
  assign first_media = product.media | first
%}

<section id="shopify-section-{{ section_id }}" x-data="{ productModalOpen: false }">
  <div class="max-w-7xl mx-auto py-6">
    {% render 'bread-crumb' %}

    <div class="flex md:flex-row flex-col gap-8 relative">
      <!-- قسم الصور -->
      <div class="flex flex-col gap-8 md:w-3/5 px-12">
        <picture class="bg-white shadow-xl rounded-xl border border-neutral-200 overflow-hidden hidden md:block">
          <div
            id="main-product-image"
            class="overflow-hidden aspect-[400/360]"
            data-current-media-id="{{ first_media.id }}"
          >
            {% render 'product-media',
              media: first_media,
              loading: 'lazy',
              image_class: 'w-full h-full object-cover',
              alt: product_title
            %}
          </div>

          <!-- صور الميديا المخفية -->
          <div id="all-variant-media" class="hidden aspect-[400/360]">
            {% for media in product.media %}
              <div data-media-id="{{ media.id }}" class="overflow-hidden">
                {% render 'product-media', media: media, mediaId: media.id, loading: 'lazy', alt: product_title %}
              </div>
            {% endfor %}
          </div>
        </picture>

        <!-- thumbnails -->
        <div class="thumbnail-slider">
          <div
            class="swiper mySwiper-{{ section_id }}"
            data-next-btn="swiper-button-next-{{ section_id }}"
            data-prev-btn="swiper-button-prev-{{ section_id }}"
            data-slides-per-view="3"
            data-slides-per-view-mobile="1"
          >
            <div class="swiper-wrapper">
              {% for media in product.media offset: 1 %}
                <div class="swiper-slide">
                  <button class="thumbnail-container_{{ media.id }} border border-neutral-200 ">
                    {% render 'product-media', media: media, mediaId: media.id, loading: 'lazy', alt: product_title %}
                  </button>
                </div>
              {% endfor %}
            </div>
            <div
              class="swiper-button-next swiper-button-next-{{ section_id }} text-white"
              aria-label="swiper-button-next-{{ section_id }}"
            ></div>
            <div
              class="swiper-button-prev swiper-button-prev-{{ section_id }} text-white"
              aria-label="swiper-button-prev-{{ section_id }}"
            ></div>
          </div>
        </div>

        <div id="description">
          <h2 class="text-lg font-semibold mb-2">Product Description</h2>
          {{ product.description | strip_html }}
        </div>
      </div>

      <!-- قسم المعلومات -->
      <div class="product--information px-4 md:w-2/5">
        {% form 'product', product, id: 'product-form', novalidate: 'novalidate' %}
          <div data-product-handle="{{ product_handle }}"></div>

          <!-- العنوان -->
          <div class="mb-6" id="product-title_{{ product_title }}">
            <h1 class="text-3xl font-extrabold text-gray-900 uppercase tracking-wide">
              {{ product_title }}
            </h1>
            <div class="flex items-center gap-6 text-sm text-gray-500 mt-2">
              <span>{{ section.blocks.settings.vendor_name | default: product_vendor }}</span>
              <button
                type="button"
                aria-label="Share"
                onclick="navigator.clipboard.writeText('{{ shop.url }}{{ product.url }}').then(() => { alert('Product URL copied!'); })"
                class="flex gap-2 items-center hover:text-primary transition"
              >
                {% render 'icons', icon: 'share' %}
                Share
              </button>
            </div>
          </div>

          <!-- المعلومات الرئيسية -->
          <div
            class="bg-white p-6 shadow-lg rounded-2xl  border border-neutral-200 space-y-6"
            id="product-information_{{ product_title }}"
          >
            <input type="hidden" id="formInput" name="id" value="{{ default_variant.id }}">

            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'vendor' %}
                  <div class="flex justify-center items-center gap-4">
                    {% if block.settings.vendor_type == 'image' and block.settings.vendor_image != blank %}
                      {%
                        render 'image',
                        image: block.settings.vendor_image | image_url ,
                        alt: product_vendor ,
                        class: 'object-contain max-w-36 max-h-36',
                        loading: 'lazy'
                      %}
                    {% else %}
                      <span class="text-xs text-gray-500">
                        {{ block.settings.vendor_name | default: product_vendor }}
                      </span>
                    {% endif %}
                  </div>

                {% when 'title' %}
                  <h2 class="font-extrabold text-xl">{{ product_title }}</h2>

                {% when 'price' %}
                  <div id="price-{{ section.id }}" class="flex items-center gap-3 text-4xl">
                    {% assign price_float = default_variant.price | divided_by: 100.0 %}
                    {% assign compare_float = default_variant.compare_at_price | divided_by: 100.0 %}
                    {% assign price_str = price_float | round: 2 | append: '' %}
                    {% assign compare_str = compare_float | round: 2 | append: '' %}

                    {% if price_str contains '.' %}
                      {% assign decimals = price_str | split: '.' | last %}
                      {% if decimals.size == 1 %}
                        {% assign price_str = price_str | append: '0' %}
                      {% endif %}
                    {% else %}
                      {% assign price_str = price_str | append: '.00' %}
                    {% endif %}

                    {% if compare_str contains '.' %}
                      {% assign decimals = compare_str | split: '.' | last %}
                      {% if decimals.size == 1 %}
                        {% assign compare_str = compare_str | append: '0' %}
                      {% endif %}
                    {% else %}
                      {% assign compare_str = compare_str | append: '.00' %}
                    {% endif %}

                    {% if default_variant.compare_at_price > default_variant.price %}
                      <span class="text-red-700 line-through">
                        {{ compare_str }}
                      </span>
                      <span class="font-semibold text-gray-900">
                        {{ price_str }}
                      </span>
                    {% else %}
                      <span class="font-semibold text-gray-900">
                        {{ price_str }}
                      </span>
                    {% endif %}
                    <span class="font-semibold text-gray-900">
                      {{ cart.currency.iso_code }}
                    </span>
                  </div>

                {% when 'product-variant' %}
                  {% render 'product-variant', product: product, display_type: block.settings.variant_display_type %}

                {% when 'description' %}
                  <p class="leading-relaxed">
                    {{ product.description | strip_html | truncatewords: 20 }}
                    <a class="font-extrabold text-xs" href="#description" style="color: darkred !important">
                      read more
                    </a>
                  </p>

                {% when 'payment_form' %}
                  <div class="flex flex-col gap-3 p-6 m-2 border border-neutral-200">
                    <!-- حقل الكمية + زر الإضافة في صف واحد -->
                    <div class="flex gap-3 w-full">
                      <input
                        type="number"
                        name="quantity"
                        id="Quantity-{{ section.id }}"
                        value="1"
                        min="1"
                        class="w-1/4 border border-neutral-400 rounded-md px-3 py-2 mt-1"
                      >
                      <button
                        aria-label="add to cart"
                        type="submit"
                        name="add"
                        class="w-3/4 px-6 py-4 font-semibold rounded-lg bg-[#c42764] text-white disabled:bg-gray-400"
                        {% if default_variant.available == false %}
                          disabled
                        {% endif %}
                      >
                        {% if default_variant.available == false %}Sold out{% else %}Add to cart{% endif %}
                      </button>
                    </div>

                    <!-- زر التشيك آوت أسفلهم -->
                    {% if default_variant.available %}
                      <button
                        type="submit"
                        name="checkout"
                        formaction="/checkout"
                        class="w-full px-6 py-4 font-semibold rounded-lg bg-neutral-700 text-white"
                      >
                        Checkout
                      </button>
                    {% endif %}
                  </div>

                {% when 'sku' %}
                  {% if default_variant.sku != blank %}
                    <span id="container-sku" class="text-gray-400 text-sm">SKU: {{ default_variant.sku }}</span>
                  {% endif %}

                {% when 'guarantee' %}
                  <div class="flex flex-col items-center gap-3 bg-gray-50 p-4 rounded-lg shadow-inner text-center">
                    {% if block.settings.guarantee_title != blank %}
                      {% assign guarantee_image = block.settings.guarantee_image | image_url: width: 100, height: 100 %}
                      <h2 class="font-semibold">{{ block.settings.guarantee_title }}</h2>
                      {% render 'image',
                        image: guarantee_image,
                        alt: block.settings.guarantee_title,
                        class: 'h-20 w-20 object-cover rounded-full',
                        loading: 'lazy'
                      %}
                      <span class="text-xs text-gray-500 max-w-xs">{{ block.settings.guarantee_description }}</span>
                    {% endif %}
                  </div>
              {% endcase %}
            {% endfor %}
            <div class="footer__payment flex justify-around py-6 items-center rounded-2xl  border border-neutral-200">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag }}
              {% endfor %}
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>

<script type="application/ld+json">
  {
    "@context": "https://schema.org/",
    "@type": "Product",
    "name": "{{ product_title | escape }}",
    "image": [
      {% for media in product.media %}
        "{{ media.preview_image.src }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "description": "{{ product.description | strip_html | escape }}",
    "sku": "{{ default_variant.sku }}",
    "offers": {
      "@type": "Offer",
      "url": "{{ shop.url }}{{ product.url }}",
      "priceCurrency": "{{ shop.currency }}",
      "price": "{{ default_variant.price | money_without_currency }}",
      "availability": "{% if default_variant.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}"
    }
  }
</script>

<!-- Breadcrumbs JSON-LD -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url }}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ product_title }}",
        "item": "{{ shop.url }}{{ product.url }}"
      }
    ]
  }
</script>

<script id="product-data" type="application/json">
  {{ product | json }}
</script>

{% schema %}
{
  "name": "Product",
  "settings": [],
  "blocks": [
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "vendor_image",
          "label": "Vendor Image"
        },
        {
          "type": "select",
          "id": "vendor_type",
          "label": "Vendor View Type",
          "options": [
            {
              "value": "text",
              "label": "Text"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ]
        }
      ]
    },
    {
      "type": "guarantee",
      "name": "Guarantee",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "guarantee_title",
          "label": "Guarantee Title"
        },
        {
          "type": "image_picker",
          "id": "guarantee_image",
          "label": "Guarantee Image"
        },
        {
          "type": "richtext",
          "id": "guarantee_description",
          "label": "Guarantee Description"
        }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "product-variant",
      "name": "product variant",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "variant_display_type",
          "label": "Variant display type",
          "options": [
            {
              "value": "color",
              "label": "Color"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ],
          "default": "color"
        }
      ]
    },
    {
      "type": "sku",
      "name": "SKU",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "payment_form",
      "name": "Payment Form",
      "limit": 1
    }
  ]
}
{% endschema %}
