{% comment %}
  Collection section with Shopify Search & Discovery filters
{% endcomment %}

{% assign number_of_product = section.settings.number_of_products_per_page %}
{%- assign box_width = settings.body_width -%}
{%- assign section_id = section.id -%}

<section id="shopify-section-{{ section_id }}" class="py-6 mx-auto {{ box_width }}">
  {% render 'bread-crumb' %}

  <div class="flex flex-col lg:flex-row gap-6" x-data="{ showFilters: false }">
    <!-- Filters Sidebar -->
    <aside
      id="mobile-filters"
      class="fixed inset-y-0 left-0 z-50 w-2/3 bg-white p-4 rounded-r-lg shadow-lg transform transition-transform duration-300 lg:static lg:block lg:w-1/4 lg:rounded-lg lg:shadow-md"
      x-show="showFilters"
      x-transition:enter="transform transition ease-in-out duration-300"
      x-transition:enter-start="-translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transform transition ease-in-out duration-300"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="-translate-x-full"
      x-cloak
    >
      <!-- Header for mobile -->
      <div class="flex items-center justify-between mb-4 lg:hidden">
        <h2 class="text-lg font-bold">Filters</h2>
        <button @click="showFilters = false" class="text-gray-600 hover:text-gray-900">✕</button>
      </div>

      <!-- Collection image (only desktop) -->
      {%- if collection.image.src != blank -%}
        <div class="hidden lg:block">
          {% render 'image',
            image: collection.image.src,
            alt: collection.title,
            width: 800,
            height: 800,
            class: 'w-full h-auto rounded mb-4',
            loading: 'lazy'
          %}
        </div>
      {%- endif -%}

      <!-- Filters content -->
      <div class="py-2">
        {% render 'facets', results: collection %}
      </div>
    </aside>

    <!-- Products Grid -->
    <section class="w-full lg:w-3/4">
      <div class="flex items-center justify-between text-left py-2 border-b border-[#c42764] mb-4">
        <h1 class="text-lg md:text-3xl font-bold text-gray-900 tracking-tight mb-2 sm:mb-0">{{ collection.title }}</h1>
        <button
          aria-label="Filters"
          @click="showFilters = true"
          class="px-3 py-2 bg-gray-100 rounded shadow"
        >
          Filters
        </button>
      </div>

      <div
        class="mb-4"
        x-data="
          {
              layoutType: localStorage.getItem('layoutType') || 'grid',
              setLayout(type) {
                this.layoutType = type;
                localStorage.setItem('layoutType', type);
              }
          }
        "
      >
        <form id="SortByForm" class="flex items-center justify-between py-2 border-b border-[#c42764]">
          <label for="SortBy" class="mr-2 shrink-0 font-medium text-gray-700">
            {{ collection.products_count }} products</label
          >

          <div class="flex items-center">
            <!-- Grid -->
            <button
              type="button"
              @click="setLayout('grid')"
              :class="layoutType === 'grid' ? 'text-[#c42764]' : 'text-gray-500'"
              class="p-1"
              title="Grid View"
            >
              {%- render 'icons', icon: 'icon-grid', icon_size: '20', icon_class: 'stroke-[2]' -%}
            </button>

            <!-- horizontal -->
            <button
              type="button"
              @click="setLayout('horizontal')"
              :class="layoutType === 'horizontal' ? 'text-[#c42764]' : 'text-gray-500'"
              class="p-1"
              title="List View"
            >
              {%- render 'icons', icon: 'icon-horizontal', icon_size: '20', icon_class: 'stroke-[2]' -%}
            </button>

            {% render 'collection-sort', productNumber: collection.products_count %}
          </div>
        </form>

        {% paginate collection.products by number_of_product %}
          <div id="collection-grid">
            <div
              :class="
                layoutType === 'horizontal'
                ? 'flex flex-col gap-3 w-full'
                : 'grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6'
              "
            >
              {% for product in collection.products %}
                {%- render 'product-card', product: product -%}
              {% else %}
                <p class="text-center text-gray-500 col-span-full py-10">لا توجد منتجات مطابقة.</p>
              {% endfor %}
            </div>
          </div>

          <div class="mt-8 flex justify-center">
            {%- render 'pagination', pagination: paginate -%}
          </div>
        {% endpaginate %}
      </div>
    </section>
  </div>
</section>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "header",
      "content": "Item In Page"
    },
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number Of Products Per Page",
      "default": 8
    }
  ]
}
{% endschema %}
