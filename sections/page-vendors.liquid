{% liquid
  assign section_id = section.id
  assign item_in_row = section.settings.item_in_row
  assign group_title = section.settings.show_group_title
  assign show_title = section.settings.show_title
  assign title = section.settings.title

  assign vendors = ''

  for product in collections.all.products
    unless vendors contains product.vendor and product.vendor != ''
      assign vendors = vendors | append: product.vendor | append: ','
    endunless
  endfor

  assign unique_vendors = vendors | split: ',' | uniq | sort
  assign current_letter = ''
%}

<section id="shopify-section-{{ section_id }}" class="flex max-w-7xl mx-auto py-8">
  {% if show_title %}
    <h1 class="text-3xl font-medium">
      {{ title }}
    </h1>
  {% endif %}
  <div class="w-full">
    {% for vendor in unique_vendors %}
      <div class="flex flex-col py-4">
        {% if vendor != '' %}
          {% assign first_letter = vendor | slice: 0, 1 | downcase %}

          {% if group_title and first_letter != current_letter %}
            {% assign current_letter = first_letter %}
            <div class="w-full py-3 px-3">
              <h3 class="text-2xl font-semibold">{{ first_letter | upcase }}</h3>
            </div>
          {% endif %}

          <div class="grid grid-cols-1 md:grid-cols-{{ item_in_row }} gap-6">
            <div class="bg-white hover:shadow-lg border rounded-lg overflow-hidden p-4">
              {% assign vendor_url = '/collections/vendors?q=' | append: vendor | url_encode %}
              {% render 'button', type: 'link', url: vendor_url, data_label: vendor, text: vendor %}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "List Vendors",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Title",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_group_title",
      "label": "Show Group Title",
      "default": true
    },
    {
      "type": "range",
      "id": "item_in_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Item In Row",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Vendors List"
    }
  ]
}
{% endschema %}
