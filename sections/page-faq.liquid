<section class="max-w-6xl mx-auto px-4 py-12">
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-gray-600 max-w-2xl mx-auto">{{ section.settings.intro_text }}</p>
  </div>

  <div class="space-y-4">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'faq_block' %}
          <details class="border rounded-xl p-4 bg-white shadow hover:bg-gray-50">
            <summary class="cursor-pointer font-semibold text-lg">{{ block.settings.question }}</summary>
            <div class="mt-2 text-gray-700">{{ block.settings.answer }}</div>
          </details>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "FAQ Page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Intro Text",
      "default": "Here are some of the most common questions our customers ask."
    }
  ],
  "blocks": [
    {
      "type": "faq_block",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Page",
      "category": "Pages"
    }
  ]
}
{% endschema %}
