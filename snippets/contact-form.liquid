<form method="post" action="/contact#ContactForm" id="ContactForm" accept-charset="UTF-8" class="space-y-4">
  <input type="hidden" name="form_type" value="contact">
  {{ form | hidden_inputs }}

  <div>
    <label for="ContactFormName" class="block text-sm font-medium text-gray-700">Name</label>
    <input type="text" id="ContactFormName" name="contact[name]" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 p-2">
  </div>

  <div>
    <label for="ContactFormEmail" class="block text-sm font-medium text-gray-700">Email</label>
    <input type="email" id="ContactFormEmail" name="contact[email]" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 p-2">
  </div>

  <div>
    <label for="ContactFormMessage" class="block text-sm font-medium text-gray-700">Message</label>
    <textarea id="ContactFormMessage" name="contact[body]" rows="4" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 p-2"></textarea>
  </div>

  <div>
    <button type="submit" class="w-full bg-pink-600 text-white py-2 px-4 rounded-lg shadow hover:bg-pink-700">
      Send Message
    </button>
  </div>
</form>
